<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Panel">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/animate_style</item>
    </style>

    <style name="animate_style">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_show_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_hide_to_bottom</item>
    </style>

</resources>